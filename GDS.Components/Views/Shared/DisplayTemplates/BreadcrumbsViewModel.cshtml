@model GDS.Components.ViewModels.BreadcrumbsViewModel;
@{
    if (Model == null)
    {
        throw new InvalidOperationException("BreadcrumbsViewModel is null.");
    }
}
@{
    <nav class="@Model.WrapperClassName" aria-label="@Model.Label">
        <ol class="govuk-breadcrumbs__list">
            @for (int i = 0; i < Model.Links.Count; i++)
            {
                <li class="govuk-breadcrumbs__list-item">
                    <a class="govuk-breadcrumbs__link" href="@Model.Links[i].Url">@Model.Links[i].Text</a>
                </li>
            }
        </ol>
    </nav>
}